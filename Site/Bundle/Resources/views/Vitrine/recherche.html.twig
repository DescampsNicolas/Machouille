{% extends "::machouille_layout.html.twig" %} {% block stylesheets %} {#
On charge le CSS #}
<link rel="stylesheet"
	href="{{ asset('bundles/machouillesite/css/recherche.css') }}" />
<link rel="stylesheet"
	href="{{ asset('bundles/machouillesite/css/layout.css') }}" />
<link rel="stylesheet"
	href="{{ asset('bundles/machouillesite/css/bootstrap.css') }}" />
{% endblock %} {% block title %} Machouille - Recherche {% endblock %}

{% block position %}
<span> >> Recherche </span>
{% endblock %} {% block body %}
<div id="body2">
	<div id="conteneur">
	
		
		{% for flashMessage in app.session.flashbag.get('success') %}
            <div class="row notif">
                {{ flashMessage }}
            </div>
       	{%  endfor %}

		<h1>Recherche personnalisée :</h1>

		<div class="row begin">
			<div class="col-xs-5">
				<span class="titre">Par type :</span>

			</div>

			<div class="col-xs-6">
				<span class="titre">Par goûts : </span>
			</div>
		</div>

		<div class="row form--gout">
			<form action="{{ path('machouille_site_recherche') }}" method="post">

				<div class="col-xs-5">
					<input type="radio" name="type" class="type first" value="1"> Fruités <br> <input
						type="radio" name="type" class="type" value="3"> Tri-Goût <br> <input
						type="radio" name="type" class="type" value="2"> Crémeux <br>
				</div>

				<div class="col-xs-6">

					<div class="col-xs-3">
						<input type="checkbox" name="gout[]" value="19"> Pamplemousse 
						<input type="checkbox" name="gout[]" value="6"> Panna Cotta 
						<input type="checkbox" name="gout[]" value="7"> CremeCaramel 
						<input type="checkbox" name="gout[]" value="21"> OrangeSanguin 
						<input type="checkbox" name="gout[]" value="24"> Pruneaux Agen 
						<input type="checkbox" name="gout[]" value="22"> Mandaarine 
						<input type="checkbox" name="gout[]" value="16"> Meringue
					</div>

					<div class="col-xs-2">
						<input type="checkbox" name="gout[]" value="18"> Mangue 
						<input type="checkbox" name="gout[]" value="20"> Orange 
						<input type="checkbox" name="gout[]" value="8"> Au Lait 
						<input type="checkbox" name="gout[]" value="9"> Fraise 
						<input type="checkbox" name="gout[]" value="10"> Cerise 
						<input type="checkbox" name="gout[]" value="23"> Pooire
					</div>

					<div class="col-xs-2">
						<input type="checkbox" name="gout[]" value="11"> Noisette <input
							type="checkbox" name="gout[]" value="12"> Amande <input
							type="checkbox" name="gout[]" value="13"> Menthe <input
							type="checkbox" name="gout[]" value="17"> Pomme <input
							type="checkbox" name="gout[]" value="15"> Citron <input
							type="checkbox" name="gout[]" value="25"> Banane
					</div>

					<div class="col-xs-2">
						<input type="checkbox" name="gout[]" value="1"> Vanille <input
							type="checkbox" name="gout[]" value="2"> Chocolat <input
							type="checkbox" name="gout[]" value="3"> Caramel <input
							type="checkbox" name="gout[]" value="4"> Praline <input
							type="checkbox" name="gout[]" value="5"> Tiramisu
					</div>
				</div>
				
				<div class="row">
					<div class="col-xs-12 form--recherche">
                        <input type="submit" class="btn--recherche" value="Rechercher" 
                        border=0 src="{{ asset('bundles/machouillesite/images/Icone/magnifier11.png') }}" type=image>
					</div>
				</div>
				
				
				
			</form>
		</div>

		<hr>
		{% if article is defined %}
		<div class="row">
			{% for object in article %}
			<div class="col-xs-4">
				<div class="image">
					<img src="{{ asset('bundles/machouillesite/images/CG1.png') }}" alt="" class="img_article">
				</div>
				<div class="footer--article">
					<div class="footer--description">
						<span class="article--nom"><strong>{{ object.reference }},</strong></span> <span
							class="article--prix"> 1e58/unité</span><br> <span
							class="article--description"> Gout fraise, chocolat et vanille </span>
					</div>
					<div class="footer--panier">
						<a href="#" class="btn_panier"></a>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
		{% else %}
			<div class="row notif2">
                Pas de recherche actuellement
            </div>
            <span class="vide"></span>
		{% endif %}
		
		<div style="clear: both"></div>
	</div>
</div>
{% endblock %}
